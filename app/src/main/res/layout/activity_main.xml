<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/question_mark"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/quiz_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/category_icon" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/quiz_icon"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2"
        android:layout_height="wrap_content"
        tools:ignore="DuplicateIds">

        <LinearLayout
            android:id="@+id/art_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/white_stroke"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/art_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sanat"
                android:fontFamily="@font/semibold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/eglence_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_stroke"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/eglence_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Eğlence"
                android:fontFamily="@font/semibold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/spor_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/white_stroke"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/spor_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Spor"
                android:fontFamily="@font/semibold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/science_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/white_stroke"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/science_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bilim"
                android:fontFamily="@font/semibold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_below="@id/layout2"
        android:text="Başla"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/start_btn"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:fontFamily="@font/semibold"
        android:layout_height="wrap_content"/>

</RelativeLayout>